{
  "name": "{{SERVICE_NAME}}",
  "version": "0.1.0",
  "bin": {
    "default": "infra/bin/app.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "vitest --run",
    "test:debug": "vitest --run --test-timeout=0 --no-file-parallelism",
    "coverage": "vitest run --coverage",
    "format": "npx prettier . --write",
    "lint": "npx eslint . --fix",
    "export-env": "sh utils/export-env.sh",
    "diff": "cdk diff --profile {{PROFILE}}",
    "synth": "cdk synth --profile {{PROFILE}}",
    "deploy:dev": "cdk deploy --context stageName=dev dev/{{SERVICE_NAME}}-Stack --profile {{PROFILE}}",
    "deploy:dev:hs": "cdk deploy --context stageName=dev dev/{{SERVICE_NAME}}-Stack --profile {{PROFILE}} --hotswap",
    "destroy:dev": "cdk destroy --context stageName=dev Staging/{{SERVICE_NAME}}-Stack --profile {{PROFILE}}",
    "deploy:preprod": "cdk deploy --context stageName=preprod preprod/{{SERVICE_NAME}}-Stack --profile {{PROFILE}}"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@types/aws-lambda": "^8.10.147",
    "@types/node": "22.7.9",
    "@vitest/coverage-v8": "^3.2.4",
    "aws-cdk": "2.1029.2",
    "dotenv": "^16.5.0",
    "eslint": "^9.31.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "~5.6.3",
    "typescript-eslint": "^8.37.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@aws-lambda-powertools/commons": "^2.24.1",
    "@aws-lambda-powertools/logger": "^2.24.1",
    "@aws-lambda-powertools/metrics": "^2.24.1",
    "@aws-lambda-powertools/parameters": "^2.25.2",
    "@aws-lambda-powertools/tracer": "^2.24.1",
    "@aws-sdk/client-dynamodb": "^3.893.0",
    "@aws-sdk/client-eventbridge": "^3.893.0",
    "@aws-sdk/client-s3": "^3.893.0",
    "@aws-sdk/lib-dynamodb": "^3.893.0",
    "@matthewbonig/cdk-logical-id-mapper": "^0.0.2",
    "@middy/core": "^6.4.3",
    "aws-cdk-lib": "2.214.0",
    "aws-lambda": "^1.0.7",
    "cdk-nag": "^2.37.7",
    "constructs": "^10.0.0",
    "undici": "^7.13.0"
  }
}
